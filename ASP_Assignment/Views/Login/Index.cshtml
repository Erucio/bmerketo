@model UserLoginViewModel

@{
    ViewData["Title"] = "Login to your Account";
}

<section class="login-form">
    <div class="container">
        <div class="title">@ViewData["Title"]</div>

        <form method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="form-group error"></div>

            <div class="email form-group">
                <label asp-for="Email">E-mail *
                    <a asp-action="index" asp-controller="Register">Don´t have an Account yet?</a>
                </label>
                <input asp-for="Email"/>
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="password form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="rememberme form-checkbox-group">
                <label class="custom-checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="btn-theme">LOGIN</button>
        </form>
    </div>
</section>