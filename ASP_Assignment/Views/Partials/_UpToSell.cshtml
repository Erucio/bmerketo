@model IEnumerable<Product>

<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">
            @foreach (var product in Model.Take(2))
            {
                <div class="item-1">
                    <a href="/products/@product.ArticleNumber" class="collection-item">
                        @if (string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="~/images/placeholders/placeholder.png" alt="Placeholder Image" />
                        }
                        else
                        {
                            <img src="~/images/products/@product.ImageUrl" alt="@product.Name" />
                        }
                        <div class="body">
                            <div class="title">@product.Name</div>
                            <div class="info">
                                <div>@(product.Price.HasValue ? product.Price.Value.ToString("0.00") + " $" : "N/A")</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                </div>
            }
            <div class="discover">
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">UP TO SELL</div>
                        <div class="title">50% OFF</div>
                        <div class="ingress">Get the Best Price</div>
                        <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                        <a href="#" class="link">Discover More</a>
                    </div>
                </div>
            </div>
            @foreach (var product in Model.Skip(2).Take(1))
            {
                <div class="item-2">
                    <a href="/products/@product.ArticleNumber" class="collection-item">
                        @if (string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="~/images/placeholders/placeholder.png" alt="Placeholder Image" />
                        }
                        else
                        {
                            <img src="~/images/products/@product.ImageUrl" alt="@product.Name" />
                        }
                        <div class="body">
                            <div class="title">@product.Name</div>
                            <div class="info">
                                <div>@(product.Price.HasValue ? product.Price.Value.ToString("0.00") + " $" : "N/A")</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>