@model UserRegisterViewModel
@{
    ViewData["Title"] = "Register a new Account";
}

<section class="register-form">
    <div class="container">
        <div class="title">@ViewData["Title"]</div>

        <form method="post" enctype="multipart/form-data" novalidate>

            <div asp-validation-summary="ModelOnly" class="form-group error"></div>

            <div class="firstname form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" onkeyup="validateText(event)" />
                <span asp-validation-for="FirstName" class="error"></span>
            </div>
            <div class="lastname form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" onkeyup="validateText(event)" />
                <span asp-validation-for="LastName" class="error"></span>
            </div>
            <div class="streetname form-group">
                <label asp-for="StreetName"></label>
                <input asp-for="StreetName" />
                <span asp-validation-for="StreetName" class="error"></span>
            </div>
            <div class="postalcode form-group">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" />
                <span asp-validation-for="PostalCode" class="error"></span>
            </div>
            <div class="city form-group">
                <label asp-for="City"></label>
                <input asp-for="City" />
                <span asp-validation-for="City" class="error"></span>
            </div>
            <div class="phonenumber form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="error"></span>
            </div>
            <div class="companyname form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" />
                <span asp-validation-for="CompanyName" class="error"></span>
            </div>

            <div class="email form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" onkeyup="validateEmail(event)"  />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="password form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" onkeyup="validatePassword(event)" />
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="confirmpassword form-group">
                <label asp-for="ConfirmPassword"></label>
                <input id="ConfirmPassword" asp-for="ConfirmPassword" onkeyup="validateConfirmPassword(event)" />                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>
            <div class="profileimage form-group">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" />
                <span asp-validation-for="ImageFile" class="error"></span>
            </div>

            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    <input asp-for="TermsAndConditions" />
                    <span class="checkmark"></span>
                    <label asp-for="TermsAndConditions" class="terms-label"></label>
                </label>
                <span asp-validation-for="TermsAndConditions" class="error"></span> <!-- Updated attribute -->
            </div>
            <button class="btn-theme">REGISTER</button>
        </form>
    </div>
</section>
