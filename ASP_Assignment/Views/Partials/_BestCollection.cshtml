@model IEnumerable<Product>



<section class="best-collection">
    <div class="container">
        <h1 class="collection-title">Best Collection</h1>
        <div class="collection-grid">
            @foreach (var product in Model)
            {
                <a href="/products/@product.ArticleNumber" class="collection-item">
                    @if (string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="~/images/placeholders/placeholder.png" alt="Placeholder Image" height="150" width="150" />
                    }
                    else
                    {
                        <img src="~/images/products/@product.ImageUrl" alt="@product.Name" height="150" width="150" />
                    }

                    <div class="body">
                        <div class="title">@product.Name</div>
                        <div class="info">
                            <div>@(product.Price.HasValue ? product.Price.Value.ToString("0.00") + " $" : "N/A")</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="load-more">
            <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
        </div>
    </div>
</section>

