@model ProductViewModel

<section class="top-selling">
    <div class="container-fluid">
        <h1 class="collection-title">Top selling products in this week</h1>
        <div class="collection-grid">
            <!-- collection-item start -->
            @foreach (var product in Model.NewProducts.Take(7))
            {
                <a href="/products/@product.ArticleNumber" class="collection-item">
                    @if (string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="~/images/placeholders/placeholder.png" alt="Placeholder Image" height="150" width="150" />
                    }
                    else
                    {
                        <img src="~/images/products/@product.ImageUrl" alt="@product.Name" height="150" width="150" />
                    }
                    <div class="body">
                        <div class="title">@product.Name</div>
                        <div class="info">
                            <div>@(product.Price.HasValue ? product.Price.Value.ToString("0.00") + " $" : "N/A")</div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
            }
            <!-- collection-item end -->
        </div>
        <div class="load-more">
            <button class="btn-outline-white me-1"><i class="fa-solid fa-chevron-left"></i></button>
            <button class="btn-outline-white ms-1"><i class="fa-solid fa-chevron-right"></i></button>
        </div>
    </div>
</section>

